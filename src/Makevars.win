ifeq "$(WIN)" "64"
PKG_LIBS = -L"$(ICU_PATH)/lib" -lsicuuc_x64 -lsicudt_x64 -lsicuin_x64 -lsicuio_x64 -lsicutest_x64 -lsicuuc_x64
PKG_CPPFLAGS = -I"$(ICU_PATH)/include" -DU_STATIC_IMPLEMENTATION
else
PKG_LIBS = -L"$(ICU_PATH)/lib" -lsicuuc_i386 -lsicudt_i386 -lsicuin_i386 -lsicuio_i386 -lsicutest_i386 -lsicuuc_i386
PKG_CPPFLAGS = -I"$(ICU_PATH)/include" -DU_STATIC_IMPLEMENTATION
endif


